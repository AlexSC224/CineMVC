@model CineMVC.Models.Pelicula

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-4">
    <h1>Eliminar Película</h1>
    <h3 class="mb-3">¿Estás seguro de que quieres eliminar esta película?</h3>
    <div>
        <h4 class="mb-3">Película</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Imagen</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImagenBase64))
                {
                    <img src="data:image/jpeg;base64,@Model.ImagenBase64" alt="@Model.Titulo" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />
                }
                else
                {
                    <span>Sin imagen</span>
                }
            </dd>
            <dt class="col-sm-2">Título</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>
            <dt class="col-sm-2">Duración</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Duracion)</dd>
            <dt class="col-sm-2">Género</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Genero)</dd>
            <dt class="col-sm-2">Clasificación</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Clasificacion)</dd>
            <dt class="col-sm-2">Sinopsis</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Sinopsis)</dd>
            <dt class="col-sm-2">Activa</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activa)</dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
        </form>
    </div>
</div>