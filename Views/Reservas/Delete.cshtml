@model CineMVC.Models.Reserva

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-4">
    <h1>Eliminar Reserva</h1>
    <h3 class="mb-3">¿Estás seguro de que quieres eliminar esta reserva?</h3>
    <div>
        <h4 class="mb-3">Reserva</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Usuario</dt>
            <dd class="col-sm-10">
                @if (Model.Usuario != null)
                {
                    @Html.DisplayFor(model => model.Usuario.UserName)
                }
                else
                {
                    <span>Sin usuario</span>
                }
            </dd>
            <dt class="col-sm-2">Función</dt>
            <dd class="col-sm-10">
                @if (Model.Funcion != null)
                {
                    @Html.DisplayFor(model => model.Funcion.Pelicula.Titulo) <small>(@Html.DisplayFor(model => model.Funcion.FechaHora))</small>
                }
                else
                {
                    <span>Sin función</span>
                }
            </dd>
            <dt class="col-sm-2">Cantidad de Entradas</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CantidadEntradas)</dd>
            <dt class="col-sm-2">Total</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Total)</dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
        </form>
    </div>
</div>